<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        >

        <ImageView
            android:id="@+id/t_profile_03_img"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/tprofile3"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/t_profile_03_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_alignTop="@id/t_profile_03_img"
            android:layout_toRightOf="@id/t_profile_03_img"
            android:textColor="#000000"
            android:textStyle="bold"
            android:maxLength="10"
            android:text="정주호 트레이너" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/t_profile_03_name"
            android:layout_below="@id/t_profile_03_name"
            android:layout_marginTop="6dp"
            android:text="대한민국 1위 트레이너 사자씨
            마른몸이 스트레스이신 분들을 위한 PT 입니다"
            android:textColor="#181842" />



    </RelativeLayout>
</LinearLayout>