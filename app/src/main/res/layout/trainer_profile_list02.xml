<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        >

        <ImageView
            android:id="@+id/t_profile_02_img"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/tprofile2"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/t_profile_02_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_alignTop="@id/t_profile_02_img"
            android:layout_toRightOf="@id/t_profile_02_img"
            android:textColor="#000000"
            android:textStyle="bold"
            android:maxLength="10"
            android:text="__yujeong__ 트레이너" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/t_profile_02_name"
            android:layout_below="@id/t_profile_02_name"
            android:layout_marginTop="6dp"
            android:text="여름이 다가오고 있습니다!! 노출의 계절!!!
             다들 이대로 괜찮으신가요? (찡긋)
                        "
            android:textColor="#181842" />



    </RelativeLayout>
</LinearLayout>